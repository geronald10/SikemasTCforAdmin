<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/linearLayout2_tambah_tandatangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_tambah_tandatangan_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Tutup"
            android:textColor="@android:color/white"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_tambah_tandatangan_clear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Hapus"
            android:textColor="@android:color/white"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btn_tambah_tandatangan_simpan"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Kirim"
            android:textColor="@android:color/white"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_tambah_data_tandatangan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout_tambah_tandatangan"
            app:layout_constraintRight_toRightOf="@+id/linearLayout_tambah_tandatangan"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_logo_signature"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_141_pen_1" />

                <TextView
                    android:id="@+id/tvTotalSignatureCaption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Jumlah Tandatangan: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@+id/iv_logo_signature"
                    app:layout_constraintRight_toLeftOf="@+id/tvCounter"
                    app:layout_constraintTop_toTopOf="@+id/iv_logo_signature"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_logo_signature" />

                <TextView
                    android:id="@+id/tvCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="0"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                    android:textColor="@color/colorPrimaryText"
                    app:layout_constraintBottom_toBottomOf="@+id/tvTotalSignatureCaption"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvTotalSignatureCaption" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout_tambah_tandatangan"
            android:layout_width="604px"
            android:layout_height="588px"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_tambah_data_tandatangan" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:text="@string/tandatangan_disini_hint"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorStatusIdle"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout_tambah_tandatangan"
            app:layout_constraintLeft_toLeftOf="@+id/linearLayout_tambah_tandatangan"
            app:layout_constraintRight_toRightOf="@+id/linearLayout_tambah_tandatangan"
            app:layout_constraintTop_toTopOf="@+id/linearLayout_tambah_tandatangan" />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>