<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_status_data"
            android:layout_width="16dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:src="@color/colorStatusHadir"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nrp_peserta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="5113100112"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorSecondaryText"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/iv_status_data"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nama_peserta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:text="Ronald Gunawan R"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/iv_status_data"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nrp_peserta" />

        <ImageView
            android:id="@+id/iv_data_diri_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_nama_peserta"
            app:layout_constraintTop_toBottomOf="@+id/tv_nama_peserta"
            app:srcCompat="@drawable/ic_141_exam" />

        <ImageView
            android:id="@+id/iv_status_data_diri"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_data_diri_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_data_diri_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_data_diri_icon"
            app:srcCompat="@drawable/ic_remove" />

        <ImageView
            android:id="@+id/iv_data_wajah_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_status_data_diri"
            app:layout_constraintTop_toTopOf="@+id/iv_data_diri_icon"
            app:srcCompat="@drawable/ic_101_photograph_57" />

        <ImageView
            android:id="@+id/iv_status_data_wajah"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_data_wajah_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_data_wajah_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_data_wajah_icon"
            app:srcCompat="@drawable/ic_remove" />

        <ImageView
            android:id="@+id/iv_data_ttd_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_status_data_wajah"
            app:layout_constraintTop_toTopOf="@+id/iv_data_diri_icon"
            app:srcCompat="@drawable/ic_141_pen_1"
            android:layout_marginLeft="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/iv_status_data_ttd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_data_ttd_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_data_ttd_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_data_ttd_icon"
            app:srcCompat="@drawable/ic_remove" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>